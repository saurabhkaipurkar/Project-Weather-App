<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Enhanced Text Styles -->
    <style name="WeatherTitleText">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="WeatherSubtitleText">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TemperatureText">
        <item name="android:textColor">@color/temperature_color</item>
        <item name="android:textSize">72sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="DetailValueText">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DetailLabelText">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- Enhanced Card Styles -->
    <style name="WeatherCard">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardBackgroundColor">@color/weather_card_background</item>
        <item name="strokeColor">@color/card_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="DetailCard">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/detail_card_background</item>
        <item name="strokeColor">@color/detail_card_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Enhanced Input Styles -->
    <style name="SearchInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeColor">@color/glass_border_color</item>
        <item name="boxBackgroundColor">@color/glass_background_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/accent_color</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>